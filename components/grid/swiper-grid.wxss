.swiper {
  width: 100%;
  height: 155px; /* 增加高度以确保有足够空间显示指示点 */
  position: relative;
}

.swiper .swiper-pagination {
  position: absolute;
  bottom: 5px; /* 调整底部位置 */
  text-align: center;
  width: 100%;
}

.grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-item {
  width: 20%;
  height: 65px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
  box-sizing: border-box;
  background-color: rgb(0, 255, 42);
}

.grid-item-icon {
  width: 25px;
  height: 25px;
}

.grid-item-title {
  margin-top: 2px;
  font-size: 14px;
  text-align: center;
}